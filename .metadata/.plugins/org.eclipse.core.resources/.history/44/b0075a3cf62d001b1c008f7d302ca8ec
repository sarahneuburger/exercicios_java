package DesvioDeFluxo;

import javax.swing.JOptionPane;

public class Atividade7 {

	public static void main(String[] args) {
		
		// SWITCH
		
		String opcao = JOptionPane.showInputDialog("Informe um dos três países que mais títulos de Copa do Mundo:");
		
		switch (opcao) {
		
			case "Brasil":
				JOptionPane.showMessageDialog(null, "Você acertou!");
				break;
		
				
			case "Itália":
				JOptionPane.showMessageDialog(null, "Você acertou!");
				break;
				
			case "Alemanha":
				JOptionPane.showMessageDialog(null, "Você acertou!");
				break;
			
			default
				
				
				
		}
		
	}

}
