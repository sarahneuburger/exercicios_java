package LacosDeRepeticao;

public class Atividade11 {
	
	public static void main(String[] args) {
		
		// Laço For
		
		for (int indice = 0; indice < 5; indice++) {
			
			if (indice <= 0) {
				
				System.out.println("$$$$$ n\");
			
			} else if (indice <= 1) {
				System.out.println("$$$$ \");				
				
			} else if (indice <= 2) {
				
				System.out.println("$$$ \n");
			
			} else if (indice <= 3) {	
					System.out.println("$$ \n");
			
			} else if (indice <= 4) {	
				System.out.println("$ \n");
			}
		}

	}

}

